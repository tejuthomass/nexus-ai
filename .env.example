# Nexus AI - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ==============================================================================
# DJANGO CONFIGURATION
# ==============================================================================

# Django secret key - generate a new one for production
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-generate-a-new-one

# Debug mode - set to False in production
DEBUG=False

# Allowed hosts - comma-separated list
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.onrender.com

# Admin URL path - change from default for security (optional)
ADMIN_URL_PATH=admin/

# ==============================================================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# ==============================================================================

# Full PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://username:password@host.neon.tech/database?sslmode=require

# ==============================================================================
# AI & VECTOR DATABASE
# ==============================================================================

# Google Gemini API Key
# Get from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Pinecone API Key & Index Name
# Get from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=nexus-index

# ==============================================================================
# CLOUD STORAGE (Cloudinary)
# ==============================================================================

# Get from: https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==============================================================================
# SUPERUSER (for platforms without shell access like Render free tier)
# ==============================================================================

# These are used to auto-create an admin user on first deploy
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your_secure_password_here

# ==============================================================================
# PRODUCTION SETTINGS (Render)
# ==============================================================================

# Number of Gunicorn workers (Render sets this automatically)
# WEB_CONCURRENCY=4

# Threads per worker
# THREADS_PER_WORKER=4

# Port (Render sets this automatically)
# PORT=8000

# Redis URL (optional - for distributed rate limiting)
# REDIS_URL=redis://...
