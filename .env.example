# ==============================================================================
# DJANGO SETTINGS
# ==============================================================================
# Generate a random string for production security
SECRET_KEY=<django-insecure-change-this-to-a-random-string>

# Set to "True" for development, "False" for production
DEBUG=True

# Comma-separated list of valid domain names
ALLOWED_HOSTS=localhost,127.0.0.1

# Custom path for the admin panel to improve security
ADMIN_URL_PATH=<admin/>

# ==============================================================================
# DATABASE (Neon)
# ==============================================================================
# Serverless Postgres. Get connection string from: https://neon.com/
# Format: postgres://user:password@host:port/dbname
DATABASE_URL=

# ==============================================================================
# CLOUD MEDIA (Cloudinary)
# ==============================================================================
# Handles image/video storage. Get credentials from: https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=<main>

# ==============================================================================
# AI MODELS (Google Gemini)
# ==============================================================================
# LLM used for chat responses. Get API key from: https://aistudio.google.com/
GEMINI_API_KEY=

# ==============================================================================
# VECTOR DATABASE (Pinecone)
# ==============================================================================
# Vector storage for RAG (Documents). Get keys from: https://www.pinecone.io/
PINECONE_API_KEY=
PINECONE_ENV=us-west1-gcp-free
PINECONE_INDEX_NAME=main-index

# ==============================================================================
# ACCESS CONTROL
# ==============================================================================
# Signup Logic:
# - "PUBLIC" (exact string): Allows everyone to sign up without a code.
# - NOT SET (remove this line): Signup is disabled completely.
# - <AnyOtherString>: User must enter this exact code during signup.
INVITE_CODE=

# ==============================================================================
# SUPERUSER AUTO-CREATION
# ==============================================================================
# Optional: Used to automatically create an admin user on first deploy
DJANGO_SUPERUSER_USERNAME=<admin>
DJANGO_SUPERUSER_EMAIL=<admin@example.com>
DJANGO_SUPERUSER_PASSWORD=<securepassword>